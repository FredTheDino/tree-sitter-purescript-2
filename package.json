{
  "name": "tree-sitter-purescript",
  "version": "0.1.0",
  "description": "Tree-sitter grammar for PureScript",
  "repository": "github:postsolar/tree-sitter-purescript",
  "main": "bindings/node",
  "keywords": [
    "parser",
    "purescript"
  ],
  "license": "MIT",
  "gypfile": true,
  "dependencies": {
    "nan": "^2.17.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.20.8",
    "web-tree-sitter": "^0.20.8"
  },
  "scripts": {
    "watch": "watchexec -N -r -e js -- tree-sitter generate &",
    "watch-test": "watchexec -N -r -e js -- 'tree-sitter generate && tree-sitter test' &"
  },
  "tree-sitter": [
    {
      "scope": "source.purescript",
      "file-types": [
        "purs"
      ],
      "injection-regex": "^(purs|purescript)$"
    }
  ]
}

